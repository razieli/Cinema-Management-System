<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" style="-fx-background-color: BLACK;"
	xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="il.ac.haifa.cs.sweng.cms.UserLoginController">
	<children>
		<BorderPane prefHeight="400.0" prefWidth="600.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<top>
				<AnchorPane prefHeight="0.0" prefWidth="600.0"
					BorderPane.alignment="CENTER">
					<children>
						<MenuBar prefHeight="45.0" prefWidth="600.0"
							style="-fx-background-color: BLACK; -fx-border-color: ORANGE;"
							AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
							AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
						<TextFlow prefHeight="46.0" prefWidth="600.0"
							textAlignment="CENTER" AnchorPane.bottomAnchor="5.0"
							AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
							AnchorPane.topAnchor="5.0">
							<children>
								<Text fill="ORANGE" strokeType="OUTSIDE" strokeWidth="0.0"
									text="User Login" textAlignment="CENTER" wrappingWidth="600.0">
									<font>
										<Font name="Aharoni Bold" size="30.0" />
									</font>
								</Text>
							</children>
						</TextFlow>
					</children>
				</AnchorPane>
			</top>
			<center>
				<AnchorPane prefHeight="319.0" prefWidth="600.0"
					BorderPane.alignment="CENTER">
					<children>
						<VBox alignment="CENTER" prefHeight="208.0" prefWidth="463.0"
							spacing="10.0" AnchorPane.bottomAnchor="0.0"
							AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
							AnchorPane.topAnchor="0.0">
							<children>
								<HBox alignment="CENTER">
									<children>
										<Text fx:id="userName" fill="ORANGE" strokeType="OUTSIDE"
											strokeWidth="0.0" text="Username:" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="18.0" />
											</font>
										</Text>
										<TextField fx:id="userText" prefWidth="250.0"
											promptText="user">
											<HBox.margin>
												<Insets left="20.0" />
											</HBox.margin>
											<cursor>
												<Cursor fx:constant="TEXT" />
											</cursor>
										</TextField>
									</children>
								</HBox>
								<HBox alignment="CENTER" prefHeight="100.0"
									prefWidth="200.0">
									<children>
										<Text fx:id="password" fill="ORANGE" strokeType="OUTSIDE"
											strokeWidth="0.0" text="Password:" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="18.0" />
											</font>
										</Text>
										<TextField fx:id="passText" prefWidth="250.0"
											promptText="pass">
											<HBox.margin>
												<Insets left="20.0" />
											</HBox.margin>
											<cursor>
												<Cursor fx:constant="TEXT" />
											</cursor>
										</TextField>
									</children>
								</HBox>
							</children>
						</VBox>
					</children>
				</AnchorPane>
			</center>
			<bottom>
				<AnchorPane prefHeight="35.0" prefWidth="600.0"
					BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="connectBtn" layoutX="488.0" layoutY="135.0"
							mnemonicParsing="false" onAction="#tryToConnect"
							prefHeight="29.0" prefWidth="97.0"
							style="-fx-background-color: ORANGE; -fx-background-radius: 10;"
							text="Connect" AnchorPane.bottomAnchor="6.0"
							AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
							<cursor>
								<Cursor fx:constant="HAND" />
							</cursor>

						</Button>
						<Button fx:id="networkBtn" alignment="CENTER"
							contentDisplay="CENTER" layoutX="14.0" layoutY="5.0"
							mnemonicParsing="false" onAction="#switchToConnectionSet"
							prefHeight="29.0" prefWidth="157.0"
							style="-fx-background-color: ORANGE; -fx-background-radius: 10;"
							text="Connection Settings" textAlignment="CENTER"
							AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="5.0"
							AnchorPane.topAnchor="5.0">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
							<cursor>
								<Cursor fx:constant="HAND" />
							</cursor>

						</Button>
					</children>
				</AnchorPane>
			</bottom>

		</BorderPane>
	</children>
</AnchorPane>
